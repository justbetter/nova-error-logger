{
    "name": "justbetter/nova-error-logger",
    "description": "Laravel Nova integration for Laravel Error Logger.",
    "require": {
        "php": "^8.3",
        "justbetter/laravel-error-logger": "^2.3",
        "laravel/framework": "^11.0|^12.0",
        "laravel/nova": "^5.0"
    },
    "authors": [
        {
            "name": "Ramon Rietdijk",
            "email": "ramon@justbetter.nl",
            "role": "Developer"
        },
        {
            "name": "Vincent Boon",
            "email": "vincent@justbetter.nl",
            "role": "Developer"
        }
    ],
    "type": "laravel-package",
    "autoload": {
        "psr-4": {
            "JustBetter\\NovaErrorLogger\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "JustBetter\\NovaErrorLogger\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyse": "phpstan --memory-limit=256M",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage --min=0",
        "style": "pint --test",
        "quality": [
            "@style",
            "@analyse"
        ]
    }
}
